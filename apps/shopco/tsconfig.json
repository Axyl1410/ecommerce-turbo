{
	"extends": "@workspace/typescript-config/nextjs.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"incremental": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ES2017"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": ["node_modules", ".next"]
}
