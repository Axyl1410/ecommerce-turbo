{
  "name": "e-commerce",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:express": "cd apps/express && pnpm build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "frontend:dev": "turbo dev --filter=web",
    "postinstall": "pnpm --filter @workspace/database run database:generate",
    "heroku-postbuild": "pnpm build:express"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
