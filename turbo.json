{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "database:generate"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"],
			"env": [
				"DATABASE_URL",
				"BETTER_AUTH_SECRET",
				"RESEND_SECRET",
				"GITHUB_CLIENT_ID",
				"GITHUB_CLIENT_SECRET",
				"DISCORD_CLIENT_ID",
				"DISCORD_CLIENT_SECRET",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET"
			]
		},
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		},
		"docs#build": {
			"dependsOn": [],
			"inputs": ["$TURBO_DEFAULT$"],
			"outputs": [".next/**", "!.next/cache/**", "public/_pagefind/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"test": {
			"dependsOn": ["^test"],
			"outputs": []
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"dependsOn": ["^database:generate"],
			"cache": false,
			"persistent": true
		},
		"database:generate": {
			"env": ["DATABASE_URL"],
			"cache": false
		},
		"database:migrate": {
			"cache": false,
			"persistent": true
		},
		"database:deploy": {
			"cache": false
		}
	}
}
